		"nodemon": "^3.1.4",
		"prisma": "^6.0.1",
		"tsx": "^4.17.0",
		"typescript": "^5.5.4"
	},
	"dependencies": {
		"@buf/meshtastic_protobufs.bufbuild_es": "^2.0.0-20241006120827-cc36fd21e859.2",
